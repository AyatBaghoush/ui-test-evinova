{
  "name": "ui-test-evinova",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "nyc cucumber-js",
    "performance": "lhci autorun",
    "test:chromium": "BROWSER=chromium cucumber-js",
    "test:firefox": "BROWSER=firefox cucumber-js",
    "report:open": "allure open ./reports/allure-report",
    "report:generate": "allure generate --clean ./reports/allure-results -o ./reports/allure-report",
    "archive:reports": "mkdir -p reports/archived-reports && tar -czf reports/archived-reports/iapf-report-$(date +\"%Y%m%d-%H%M%S\").tgz -C reports allure-report cucumber-report.html report.json || echo 'No report to archive'",
    "test:report": "npm run test || true && npm run report:generate && npm run report:open",
    "report": "npm run report:generate && npm run report:open",
    "coverage": "nyc report --reporter=lcov --reporter=html --reporter=text-summary"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AyatBaghoush/ui-test-evinova.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AyatBaghoush/ui-test-evinova/issues"
  },
  "homepage": "https://github.com/AyatBaghoush/ui-test-evinova#readme",
  "description": "",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@faker-js/faker": "^10.0.0",
    "@lhci/cli": "^0.15.1",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.3.3",
    "allure-playwright": "^3.3.3",
    "dotenv": "^17.2.1",
    "nyc": "^17.1.0",
    "playwright": "^1.55.0"
  },
  "dependencies": {
    "log4js": "^6.9.1",
    "sharp": "^0.34.3"
  }
}
